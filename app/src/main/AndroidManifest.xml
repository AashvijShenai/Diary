<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_connect_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_connect_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Diaryv2"
        tools:targetApi="31">
        <activity
            android:name=".ThoughtsJournalActivity"
            android:exported="false"
            android:label="@string/title_activity_thoughts_journal"
            android:theme="@style/Theme.Diaryv2" />
        <activity
            android:name=".LowLightJournalActivity"
            android:exported="false"
            android:label="@string/title_activity_low_light_journal"
            android:theme="@style/Theme.Diaryv2" />
        <activity
            android:name=".CareerPlanActivity"
            android:exported="false"
            android:label="@string/title_activity_career_plan"
            android:theme="@style/Theme.Diaryv2" />
        <activity
            android:name=".RelationsPlanActivity"
            android:exported="false"
            android:label="@string/title_activity_relations_plan"
            android:theme="@style/Theme.Diaryv2" />
        <activity
            android:name=".HighlightJournalActivity"
            android:exported="false"
            android:label="@string/title_activity_highlight_journal"
            android:theme="@style/Theme.Diaryv2" />
        <activity
            android:name=".SelfPlanActivity"
            android:exported="false"
            android:label="@string/title_activity_self_plan"
            android:theme="@style/Theme.Diaryv2" />
        <activity
            android:name=".CalendarActivity"
            android:exported="false"
            android:label="@string/title_activity_calendar"
            android:theme="@style/Theme.Diaryv2" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Diaryv2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>